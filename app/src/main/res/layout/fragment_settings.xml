<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/margin_medium"
    tools:context=".fragments.SettingsFragment">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/account_image"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/no_photo"
        android:layout_gravity="center"
        app:shapeAppearanceOverlay="@style/ImageView.Round" />

    <TextView
        android:id="@+id/nickname_textview"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Тестовое имя"
        android:gravity="center"
        android:textSize="@dimen/text_size_large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/email_textview"
        tools:text="Почта"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/sign_out_button"
        android:layout_gravity="center"
        android:text="Выйти"
        android:backgroundTint="@color/red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    <TextView
        android:id="@+id/text_acc_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:text="Настройки аккаунта"
        android:textSize="@dimen/text_size_large" />

    <LinearLayout
        android:padding="@dimen/margin_small"
        android:background="?attr/colorPrimary"
        android:layout_margin="@dimen/margin_small"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/change_nickname_button"
        android:text="Изменить никнейм"
        android:textSize="@dimen/text_size_large"
        android:clickable="true"
        android:focusable="true"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:background="?android:selectableItemBackground"
        app:drawableEndCompat="@drawable/arrow_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <View
        android:layout_gravity="center"
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="3dp"/>

    <TextView
        android:id="@+id/change_password_button"
        android:text="Изменить пароль"
        android:textSize="@dimen/text_size_large"
        android:clickable="true"
        android:focusable="true"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:background="?android:selectableItemBackground"
        app:drawableEndCompat="@drawable/arrow_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:id="@+id/common_settings_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:text="Общие настройки"
        android:textSize="@dimen/text_size_large" />

    <TextView
        android:id="@+id/change_first_page_button"
        android:text="Изменить первую страницу"
        android:textSize="@dimen/text_size_large"
        android:clickable="true"
        android:focusable="true"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:background="?android:selectableItemBackground"
        app:drawableEndCompat="@drawable/arrow_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>