<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/authFragment">

    <action
        android:id="@+id/action_to_searchFragment"
        app:destination="@id/searchFragment" />
    <action
        android:id="@+id/action_to_queuesFragment"
        app:destination="@id/queuesFragment" />
    <action
        android:id="@+id/action_to_settingsFragment"
        app:destination="@id/settingsFragment" />
    <action
        android:id="@+id/action_to_newsFragment"
        app:destination="@id/newsFragment" />
    <action
        android:id="@+id/action_to_queueFragment"
        app:destination="@id/queueFragment" />

    <fragment
        android:id="@+id/authFragment"
        android:name="com.example.queue.ui.fragments.AuthFragment"
        android:label="fragment_auth"
        tools:layout="@layout/fragment_auth" >
        <action
            android:id="@+id/action_authFragment_to_registerFragment"
            app:enterAnim="@animator/nav_default_enter_anim"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_authFragment_to_newsFragment"
            app:enterAnim="@animator/nav_default_enter_anim"
            app:destination="@id/newsFragment" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.queue.ui.fragments.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_newsFragment"
            app:enterAnim="@animator/nav_default_enter_anim"
            app:destination="@id/newsFragment" />
    </fragment>


    <fragment
        android:id="@+id/newsFragment"
        android:name="com.example.queue.ui.fragments.NewsFragment"
        android:label="fragment_news"
        tools:layout="@layout/fragment_news" >
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.queue.ui.fragments.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/queuesFragment"
        android:name="com.example.queue.ui.fragments.QueuesFragment"
        android:label="fragment_queues" />
    <fragment
        android:id="@+id/queueFragment"
        android:name="com.example.queue.ui.fragments.QueueFragment"
        android:label="fragment_queue" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.queue.ui.fragments.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />


</navigation>